{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "google",
        "plugin:import/recommended",
        "plugin:import/typescript"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-use-before-define": ["error", { "functions": true, "classes": true }],
        "no-multiple-empty-lines": ["error", { "max": 1, "maxEOF": 0 }]
    },
    "settings": {
        "import/resolver": {
            "alias": {
                "map": [
                    ["#", "backend/src"]
                ],
                "extensions": [".ts"]
            }
        }
    }
}
